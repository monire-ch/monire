---
const { before, after, impact, client, date, category, tools, website } =
  Astro.props;
---

<div class="max-w-xl space-y-8 text-sm">
  <!-- Before -->
  {
    before && (
      <div>
        <h4 class="mb-1 font-semibold">Before:</h4>
        <p class="whitespace-pre-line opacity-80">{before}</p>
      </div>
    )
  }
  <!-- After -->
  {
    after && (
      <div>
        <h4 class="mb-1 font-semibold">After:</h4>
        <p class="whitespace-pre-line opacity-80">{after}</p>
      </div>
    )
  }

  <!-- Impact -->
  {
    impact && (
      <div>
        <h4 class="mb-1 font-semibold">Impact:</h4>
        <p class="whitespace-pre-line opacity-80">{impact}</p>
      </div>
    )
  }

  <hr class="my-6" />

  <!-- Client -->
  <div class="flex justify-between border-b py-2">
    <span class="opacity-60">Client</span>
    <span>{client}</span>
  </div>

  <!-- Date -->
  <div class="flex justify-between border-b py-2">
    <span class="opacity-60">Date</span>
    <span>{date}</span>
  </div>

  <!-- Category -->
  <div class="flex justify-between border-b py-2">
    <span class="opacity-60">Category</span>
    <span class="rounded-full bg-gray-100 px-3 py-1 text-xs">{category}</span>
  </div>

  <!-- Tools -->
  <div class="flex justify-between border-b py-2">
    <span class="opacity-60">Tools</span>
    <div class="flex flex-wrap justify-end gap-2">
      {
        tools.map((tool) => (
          <span class="rounded-full bg-gray-100 px-3 py-1 text-xs">{tool}</span>
        ))
      }
    </div>
  </div>

  <!-- Website -->
  {
    website && (
      <div class="flex justify-between py-2">
        <span class="opacity-60">Website</span>
        <a href={website} class="text-blue-600 underline">
          Visit Website
        </a>
      </div>
    )
  }
</div>
