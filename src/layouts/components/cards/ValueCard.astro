---
import { markdownify } from "@/lib/utils/textConverter";
import OptimizedImage from "../utilities/OptimizedImage.astro";

// TODO: fix types, add tooltip or note, icons, delete unneeded files
interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<div
  class="border-primary/30 hover:bg-accent relative space-y-8 rounded-lg border p-5 transition-colors duration-300">
  <div class="flex items-center gap-4">
    {
      image && (
        <OptimizedImage
          width={48}
          height={48}
          class="bg-primary/10 h-12 w-12 rounded-sm"
          src={image}
          alt={`Related to ${title}`}
        />
      )
    }
    {title && <h3 class="h6" set:html={markdownify(title)} />}
  </div>
  {description && <p set:html={markdownify(description)} />}
</div>
