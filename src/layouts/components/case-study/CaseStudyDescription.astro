---
const { before, after, impact, description, type } = Astro.props;

const isAutomation = type === "automation";
const isPortfolio = type === "portfolio";
---

<div class="text-monire-deep-teal max-w-xl space-y-8 text-sm">
  <!-- Portfolio → Show only description paragraph -->
  {
    isPortfolio && description && (
      <div>
        <p class="whitespace-pre-line opacity-80">{description}</p>
      </div>
    )
  }

  <!-- Automation → Show Before / After / Impact -->
  {
    isAutomation && before && (
      <div>
        <h4 class="text-monire-deep-teal mb-1 font-semibold">Before:</h4>
        <p class="whitespace-pre-line opacity-80">{before}</p>
      </div>
    )
  }

  {
    isAutomation && after && (
      <div>
        <h4 class="text-monire-deep-teal mb-1 font-semibold">After:</h4>
        <p class="whitespace-pre-line opacity-80">{after}</p>
      </div>
    )
  }

  {
    isAutomation && impact && (
      <div>
        <h4 class="text-monire-deep-teal mb-1 font-semibold">Impact:</h4>
        <p class="whitespace-pre-line opacity-80">{impact}</p>
      </div>
    )
  }
</div>
