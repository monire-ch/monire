---
import Link from "@/layouts/components/links/Link.astro";

interface Props {
  client: string;
  date: string;
  category: string;
  tools: string[];
  website?: string;
}

const { client, date, category, tools = [], website } = Astro.props as Props;
---

<div class="text-monire-deep-teal max-w-xl space-y-2 text-sm">
  <div class="flex justify-between border-b py-2">
    <span class="opacity-60">Client</span>
    <span>{client}</span>
  </div>

  <div class="flex justify-between border-b py-2">
    <span class="opacity-60">Date</span>
    <span>{date}</span>
  </div>

  <div class="flex justify-between border-b py-2">
    <span class="opacity-60">Category</span>
    <span
      class="rounded-full border px-3 py-1 text-xs"
      style="background-color: var(--color-value-card-neutral-bg); border-color: var(--color-value-card-neutral-border);">
      {category}
    </span>
  </div>

  <div class="flex justify-between border-b py-2">
    <span class="opacity-60">Tools</span>
    <div class="flex flex-wrap justify-end gap-2">
      {
        tools.map((tool) => (
          <span
            class="rounded-full border px-3 py-1 text-xs"
            style="background-color: var(--color-value-card-neutral-bg); border-color: var(--color-value-card-neutral-border);">
            {tool}
          </span>
        ))
      }
    </div>
  </div>

  {
    website && (
      <div class="flex justify-between py-2">
        <span class="opacity-60">Website</span>
        <Link href={website} class="case-study-website-link">
          Visit Website
        </Link>
      </div>
    )
  }
</div>

<style>
  :global(.case-study-website-link) {
    color: var(--color-monire-deep-teal) !important;
    text-decoration: none;
  }

  :global(.case-study-website-link:hover),
  :global(.case-study-website-link:focus-visible) {
    color: var(--color-link-light-bg-hover) !important;
    text-decoration: underline;
    text-decoration-thickness: var(--color-link-underline-thickness);
  }
</style>
