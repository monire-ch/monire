---
import Logo from "@/components/global/Logo.astro";
import config from ".astro/config.generated.json" with { type: "json" };
import MenuItem from "@/layouts/components/global/header/MenuItem.astro";
import NavToggleBtn from "@/layouts/components/global/header/NavToggleBtn.astro";
import type { NavigationLink } from "@/types";
import { sortByWeight } from "@/lib/utils/sortFunctions";
import { filteredEnabled } from "@/lib/utils/filteredEnabled";

import menuFromJson from "@/config/menu.en.json" with { type: "json" };

let main = menuFromJson.main as NavigationLink[];
main = filteredEnabled(main);
main = sortByWeight(main);

const {
  site: { logoHoverAnimation },
} = config;
---

<header class:list={["header group/header sticky-header relative z-50"]}>
  <div class="container">
    <nav class="relative flex items-center justify-between px-2 py-2.5">
      <Logo class={logoHoverAnimation ? "has-hover-animation -translate-x-3 -translate-y-0.5" : "-translate-x-3 -translate-y-0.5"} />

      <ul
        id="nav-menu"
        class="navbar lg:flex lg:flex-row lg:items-center lg:gap-5">
        {/* Mobile logo - only visible in mobile menu */}
        <li class="mobile-logo-wrapper lg:hidden -translate-x-1 -translate-y-0.5">
          <Logo class={logoHoverAnimation ? "has-hover-animation" : ""} />
        </li>
        {main.map((menu) => <MenuItem menu={menu} />)}
      </ul>

      <NavToggleBtn />
    </nav>
  </div>
</header>

<style>
  .header.sticky-header {
    position: sticky !important;
    top: clamp(0.45rem, 1.2vw, 0.9rem) !important;
    z-index: 50 !important;
    background: transparent !important;
  }

  .header.sticky-header > .container {
    background: transparent !important;
  }

  /* On homepage, ensure header overlays hero section */
  body:has(.hero-bg) .header.sticky-header {
    background: transparent !important;
  }

  @media (max-width: 1023px) {
    .header.sticky-header {
      top: 0 !important;
      z-index: 9998 !important;
    }
  }

  @media (min-width: 1024px) {
    .header > .container > nav {
      margin-top: clamp(0.45rem, 1.2vw, 0.9rem);
    }

    #nav-menu {
      display: flex !important;
      position: static !important;
      height: auto !important;
      width: auto !important;
      background: transparent !important;
      padding: 0 !important;
      box-shadow: none !important;
      transform: none !important;
    }
  }

  /* Mobile menu styles */
  @media (max-width: 1023px) {
    /* Ensure header logo is visible on mobile */
    .header > .container > nav {
      margin-top: 0.5rem;
    }

    .header nav > .logo-wrapper {
      display: flex !important;
      visibility: visible !important;
      opacity: 1 !important;
      z-index: 10000 !important;
    }

    #nav-menu.navbar,
    .navbar#nav-menu,
    nav .navbar {
      position: fixed !important;
      top: 0 !important;
      left: 0 !important;
      right: -100% !important;
      bottom: 0 !important;
      height: 100vh !important;
      width: 100vw !important;
      max-width: none !important;
      max-height: none !important;
      margin: 0 !important;
      padding: 0 !important;
      border-radius: 0 !important;
      border: none !important;
      box-shadow: none !important;
      background: linear-gradient(
        180deg,
        var(--color-bg-dark) 0%,
        var(--color-bg-dark-soft) 100%
      ) !important;
      opacity: 0;
      pointer-events: none;
      display: flex !important;
      flex-direction: column;
      gap: 0.5rem;
      overflow-y: auto;
      z-index: 9999 !important;
      transition:
        right 0.3s ease,
        opacity 0.3s ease;
      box-sizing: border-box;
      transform: none !important;
    }

    .navbar.open,
    #nav-menu.navbar.open,
    .navbar#nav-menu.open {
      right: 0 !important;
      opacity: 1 !important;
      pointer-events: auto !important;
    }

    #nav-menu {
      padding-top: 2rem !important;
      padding-bottom: 2rem !important;
      padding-left: calc(var(--spacing) * 2) !important;
      padding-right: calc(var(--spacing) * 2) !important;
      align-items: flex-start !important;
    }

    #nav-menu .mobile-logo-wrapper {
      display: flex !important;
      justify-content: flex-start !important;
      align-items: center !important;
      width: 100% !important;
      margin-bottom: 1rem !important;
      padding-left: 0 !important;
      padding-right: 0 !important;
      padding-top: calc(var(--spacing) * 2.5) !important;
      padding-bottom: calc(var(--spacing) * 6) !important;
      list-style: none !important;
    }

    #nav-menu .mobile-logo-wrapper .logo-wrapper {
      display: flex !important;
      justify-content: flex-start !important;
      align-items: center !important;
    }

    #nav-menu .mobile-logo-wrapper .logo {
      width: auto !important;
      height: 3rem !important;
      max-width: 200px !important;
    }

    :global(.dark) #nav-menu {
      background: linear-gradient(
        180deg,
        var(--color-bg-dark) 0%,
        var(--color-bg-dark-soft) 100%
      );
      box-shadow: var(--shadow-elevation-soft);
    }

    #nav-menu :global(.nav-item) {
      margin: 0;
      width: 100%;
    }

    #nav-menu :global(.nav-item:not(.mobile-logo-wrapper):not(.nav-item-cta)) {
      padding: 1rem 0;
      border-bottom: 1px solid var(--color-border-shell-dark);
    }

    #nav-menu :global(.nav-link) {
      display: block;
      padding-left: 1.7rem;
      font-size: 1.3rem;
      line-height: 1.2;
      letter-spacing: 0.04em;
      font-weight: 400;
      text-transform: none;
      color: var(--color-text-shell-muted);
      width: 100%;
      border-radius: 0;
      transition:
        background-color 0.2s,
        color 0.2s;
    }

    #nav-menu :global(.nav-link.nav-link-active) {
      background-color: transparent !important;
      color: var(--color-text-shell-strong) !important;
    }

    #nav-menu :global(.nav-item.nav-item-cta) {
      display: flex;
      justify-content: center;
      padding-top: 2rem;
      border-bottom: 0;
    }

    #nav-menu :global(.nav-link.nav-link-cta) {
      width: auto !important;
      min-width: 14rem;
      text-transform: none !important;
      border-radius: 999px;
    }

    #nav-menu :global(.nav-link.nav-link-cta .label) {
      font-size: 1.3rem;
      line-height: 1.2;
      letter-spacing: 0.04em;
      font-weight: 400;
      text-transform: none !important;
    }

    #nav-menu > :first-child {
      margin-top: 0.5rem;
    }
  }
</style>
