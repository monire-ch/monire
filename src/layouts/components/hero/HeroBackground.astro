<div aria-hidden="true" class="hero-editorial-bg">
  <div class="hero-teal-wash"></div>
  <div class="hero-grid-overlay"></div>
</div>

<style>
  .hero-editorial-bg {
    position: absolute;
    inset: 0;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
  }

  .hero-grid-overlay {
    position: absolute;
    inset: 0;
    opacity: 0.12;
    background-image:
      linear-gradient(
        to right,
        rgb(78 196 224 / 0.05) 1px,
        transparent 1px
      ),
      linear-gradient(
        to bottom,
        rgb(78 196 224 / 0.03) 1px,
        transparent 1px
      );
    background-size: 96px 96px;
    background-position: center top;
  }

  .hero-teal-wash {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(
        180deg,
        rgb(2 30 40 / 0.9) 0%,
        rgb(3 43 56 / 0.82) 34%,
        rgb(6 76 93 / 0.62) 64%,
        rgb(11 114 135 / 0.5) 100%
      ),
      radial-gradient(
        170% 104% at 50% 112%,
        rgb(104 224 250 / 0.34) 0%,
        rgb(104 224 250 / 0.22) 32%,
        rgb(104 224 250 / 0.1) 54%,
        transparent 78%
      ),
      radial-gradient(
        125% 88% at 15% 112%,
        rgb(93 208 238 / 0.16) 0%,
        rgb(93 208 238 / 0.08) 34%,
        transparent 72%
      ),
      radial-gradient(
        125% 88% at 85% 112%,
        rgb(93 208 238 / 0.16) 0%,
        rgb(93 208 238 / 0.08) 34%,
        transparent 72%
      );
  }

  @media (max-width: 767px) {
    .hero-grid-overlay {
      background-size: 72px 72px;
      opacity: 0.09;
    }

    .hero-teal-wash {
      background:
        linear-gradient(
          180deg,
          rgb(2 30 40 / 0.86) 0%,
          rgb(3 43 56 / 0.78) 36%,
          rgb(6 76 93 / 0.58) 66%,
          rgb(11 114 135 / 0.46) 100%
        ),
        radial-gradient(
          195% 116% at 50% 114%,
          rgb(104 224 250 / 0.28) 0%,
          rgb(104 224 250 / 0.17) 34%,
          rgb(104 224 250 / 0.07) 56%,
          transparent 80%
        ),
        radial-gradient(
          145% 96% at 16% 116%,
          rgb(93 208 238 / 0.12) 0%,
          rgb(93 208 238 / 0.06) 34%,
          transparent 74%
        ),
        radial-gradient(
          145% 96% at 84% 116%,
          rgb(93 208 238 / 0.12) 0%,
          rgb(93 208 238 / 0.06) 34%,
          transparent 78%
        );
    }
  }
</style>
