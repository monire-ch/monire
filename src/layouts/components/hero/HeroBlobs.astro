---
// Simple blended hero glow with lightweight motion.
---

<div aria-hidden="true" class="hero-glow">
  <div class="hero-glow-base"></div>
  <div class="hero-glow-motion"></div>
</div>

<style>
  .hero-glow {
    position: absolute;
    inset: 0;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
  }

  .hero-glow-base,
  .hero-glow-motion {
    position: absolute;
    inset: 0;
    background-repeat: no-repeat;
  }

  .hero-glow-base {
    background-image:
      radial-gradient(
        175% 118% at 50% 112%,
        rgb(130 238 255 / 0.28) 0%,
        rgb(130 238 255 / 0.18) 34%,
        rgb(130 238 255 / 0.1) 54%,
        rgb(130 238 255 / 0.04) 68%,
        transparent 82%
      ),
      linear-gradient(
        to top,
        rgb(104 220 250 / 0.14) 0%,
        rgb(104 220 250 / 0.08) 18%,
        rgb(104 220 250 / 0.04) 32%,
        transparent 48%
      );
  }

  .hero-glow-motion {
    opacity: 0.62;
    background-image:
      radial-gradient(
        155% 106% at 52% 108%,
        rgb(144 242 255 / 0.2) 0%,
        rgb(144 242 255 / 0.12) 38%,
        rgb(144 242 255 / 0.05) 58%,
        transparent 80%
      );
    animation: hero-glow-drift 16s ease-in-out infinite alternate;
  }

  @keyframes hero-glow-drift {
    from {
      transform: translate3d(-1.5%, 1.5%, 0);
    }
    to {
      transform: translate3d(1.5%, -1.5%, 0);
    }
  }

  @media (max-width: 767px) {
    .hero-glow-base {
      background-image:
        radial-gradient(
          210% 130% at 50% 114%,
          rgb(130 238 255 / 0.24) 0%,
          rgb(130 238 255 / 0.15) 36%,
          rgb(130 238 255 / 0.08) 56%,
          rgb(130 238 255 / 0.03) 70%,
          transparent 84%
        ),
        linear-gradient(
          to top,
          rgb(104 220 250 / 0.12) 0%,
          rgb(104 220 250 / 0.07) 22%,
          rgb(104 220 250 / 0.03) 34%,
          transparent 50%
        );
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-glow-motion {
      animation: none;
    }
  }
</style>
