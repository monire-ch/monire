---
import { getEntryCTM } from "@/lib/contentParser.astro";
import overrideObjects from "@/lib/utils/overrideObjects.ts";
import Subtitle from "../widgets/Subtitle.astro";
import type { FAQCategory, Section } from "@/types";
import { markdownify } from "@/lib/utils/textConverter";
import AccordionList from "@/layouts/components/widgets/AccordionList.astro";

type faqSectionType = Section & {
  list?: FAQCategory[];
};
type Props = {
  content?: faqSectionType;
};

let defaultContent = (await getEntryCTM("faq", "-index", Astro.currentLocale))
  ?.data as faqSectionType;

let actualContent = overrideObjects(
  { ...defaultContent },
  Astro.props.content,
) as faqSectionType;

let {
  enable = true,
  title,
  subtitle,
  list,
  limit,
} = actualContent as faqSectionType;

// Limit the number of items to be displayed
list = limit && list ? list.slice(0, limit as number) : list;
---

{
  enable && (
    <section id="faq" class="pricing-dark-teal faq-dark-teal relative overflow-hidden">
      <div class="pricing-orb pricing-orb-1" aria-hidden="true" />
      <div class="pricing-orb pricing-orb-2" aria-hidden="true" />
      <div class="container">
        <div class="space-y-12 md:space-y-16">
          <div class="mx-auto max-w-2xl text-center" data-aos="fade-up-sm">
            <Subtitle content={subtitle} />
            {title && (
              <h2
                class="section-title has-italic-text text-white capitalize"
                set:html={markdownify(title)}
              />
            )}
          </div>
          {list && list.length > 0 && (
            <div
              data-aos="fade-up-sm"
              data-aos-delay="300"
              class:list={["section-gradient relative"]}>
              {
                <div class="faq-shell rounded-lg border p-6 max-lg:space-y-6 lg:grid lg:grid-cols-8 lg:gap-16 lg:rounded-3xl lg:p-12">
                  <nav
                    role="tablist"
                    aria-label="Tabs"
                    aria-orientation="horizontal"
                    class:list={[
                      "faq-tabs-wrapper lg:col-span-3 xl:col-span-2",
                    ]}>
                    {list.map((button: FAQCategory, index: number) => (
                      <button
                        role="tab"
                        type="button"
                        set:html={button.label}
                        id={"faq-tab-item-" + (index + 1)}
                        data-hs-tab={"#faq-tab-" + (index + 1)}
                        aria-controls={"faq-tab-" + (index + 1)}
                        aria-selected={index === 0 ? "true" : "false"}
                        class:list={[
                          "faq-tab px-6 py-2.5 text-start text-lg max-lg:min-w-full",
                          { active: index === 0 },
                        ]}
                      />
                    ))}
                  </nav>
                  {list.map((tab: FAQCategory, index: number) => (
                    <AccordionList
                      role="tabpanel"
                      content={tab.list}
                      class:list={[
                        "col-span-5 space-y-5 xl:col-span-6",
                        index === 0 ? "block" : "hidden",
                      ]}
                      id={"faq-tab-" + (index + 1)}
                      tabIndex={"faq-group-1-" + (index + 1)}
                      aria-labelledby={"faq-tab-item-" + (index + 1)}
                    />
                  ))}
                </div>
              }
            </div>
          )}
        </div>
      </div>
    </section>
  )
}

<script>
  import "@preline/tabs";
  import "@preline/accordion";
</script>

<style>
  .faq-shell {
    background: color-mix(in srgb, var(--color-bg-dark-soft) 58%, transparent);
    border-color: color-mix(
      in srgb,
      var(--color-border-overlay) 90%,
      transparent
    );
    box-shadow: var(--shadow-shell-soft);
  }

  .faq-tabs-wrapper {
    display: grid;
    gap: 0.55rem;
    align-content: start;
  }

  .faq-tab {
    border-radius: 999rem;
    border: 1px solid
      color-mix(in srgb, var(--color-border-surface-dark) 85%, transparent);
    background: transparent;
    color: color-mix(in srgb, white 82%, transparent);
    transition:
      color 180ms ease,
      background-color 180ms ease,
      border-color 180ms ease,
      box-shadow 180ms ease,
      transform 180ms ease;
  }

  .faq-tab:hover {
    color: white;
    border-color: color-mix(in srgb, var(--color-mustard-70) 80%, transparent);
  }

  .faq-tab.active {
    background: color-mix(in srgb, white 18%, transparent);
    border-color: var(--color-mustard-70);
    color: white;
    box-shadow: none;
  }

  .faq-tab:focus-visible {
    outline: 0.125rem solid var(--color-mustard);
    outline-offset: 0.125rem;
  }

  .faq-dark-teal :global(.hs-accordion-toggle) {
    color: white;
    border-color: color-mix(
      in srgb,
      var(--color-border-overlay) 85%,
      transparent
    ) !important;
  }

  .faq-dark-teal :global(.hs-accordion-toggle .title),
  .faq-dark-teal :global(.hs-accordion-content p),
  .faq-dark-teal :global(.hs-accordion-content li) {
    color: var(--color-text-shell-muted);
  }

  .faq-dark-teal :global(.hs-accordion.active .hs-accordion-toggle .title) {
    color: white;
  }

  .faq-dark-teal :global(.hs-accordion) {
    background: color-mix(in srgb, var(--color-bg-dark-soft) 70%, transparent);
    border: 1px solid
      color-mix(in srgb, var(--color-border-overlay) 88%, transparent);
    opacity: 1;
  }
</style>
