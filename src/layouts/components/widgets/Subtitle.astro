---
import { markdownify } from "@/lib/utils/textConverter";

interface Props {
  content: any;
  class?: string;
  [key: string]: any;
}

const { content, class: className, ...rest } = Astro.props;
---

{
  content && (
    <div
      class:list={[
        "section-subtitle mx-auto mb-6 inline-flex w-fit items-center rounded-full border px-4 py-1.5 text-sm font-medium tracking-[0.18em]",
        className,
      ]}
      {...rest}>
      <span class="section-subtitle-text">{markdownify(content)}</span>
    </div>
  )
}

<style is:global>
  .section-subtitle {
    border-color: var(--color-mustard-50);
    background: color-mix(in srgb, var(--color-bg-dark-soft) 62%, transparent);
    color: var(--color-link-dark-bg);
  }

  .section-light .section-subtitle {
    border-color: color-mix(in srgb, var(--color-monire-deep-teal) 26%, transparent);
    background: color-mix(in srgb, var(--color-bg-page) 88%, var(--color-monire-deep-teal));
    color: var(--color-monire-deep-teal);
  }
</style>
