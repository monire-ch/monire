---
import { markdownify } from "@/lib/utils/textConverter";

interface Props {
  content: any;
  class?: string;
  [key: string]: any;
}

const { content, class: className, ...rest } = Astro.props;
---

{
  content && (
    <div
      class:list={[
        "mx-auto mb-2.5 flex w-fit items-center rounded-full py-1 text-[#CFA947] uppercase tracking-[0.22em]",
        className,
      ]}
      {...rest}>
      {markdownify(content)}
    </div>
  )
}
