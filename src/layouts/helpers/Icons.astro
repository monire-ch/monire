---
import type { IconProps } from "@lucide/astro";
import { ArrowUpRight, ChevronDown, ChevronUp } from "@lucide/astro";

const iconMap = {
  ArrowUpRight,
  ChevronDown,
  ChevronUp,
} as const;

type IconName = keyof typeof iconMap;
interface Props extends IconProps {
  icon: IconName;
}

const { icon, ...restProps } = Astro.props;
const Icon = iconMap[icon];
---

{
  Icon ? (
    <Icon {...restProps} />
  ) : (
    <span aria-hidden="true" {...restProps} />
  )
}
