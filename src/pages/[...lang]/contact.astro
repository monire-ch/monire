---
import Base from "@/layouts/Base.astro";
import { getEntryCTM } from "@/lib/contentParser.astro";
import handleDraftPage from "@/lib/utils/handleDraftPage";
import { generatePaths } from "@/lib/utils/i18nUtils";
import CallToAction from "@/components/sections/CallToAction.astro";
import ContactSection from "@/components/sections/ContactSection.astro";
import DarkTealPageTheme from "@/layouts/components/themes/DarkTealPageTheme.astro";

export function getStaticPaths() {
  return generatePaths();
}

const contactIndex = await getEntryCTM(
  "contact",
  "-index",
  Astro.currentLocale,
);

// Remove drafts pages in production
const response = handleDraftPage(contactIndex?.data);
if (response) return response;
---

<Base {...contactIndex?.data}>
  <DarkTealPageTheme
    title={contactIndex?.data?.pageHeading || contactIndex?.data?.title}
    titleAlign="left">
    <ContactSection showDetails={true} />
  </DarkTealPageTheme>
  <CallToAction />
</Base>
