---
import Base from "@/layouts/Base.astro";
import About from "@/components/sections/About.astro";
import { getEntryCTM } from "@/lib/contentParser.astro";
import { generatePaths } from "@/lib/utils/i18nUtils";
import FaqSection from "@/components/sections/FaqSection.astro";
import HomeBanner from "@/components/sections/HomeBanner.astro";
import OurValue from "@/components/sections/OurValue.astro";
import CallToAction from "@/components/sections/CallToAction.astro";
import PricingSection from "@/components/sections/PricingSection.astro";
import ServicesSection from "@/components/sections/ServicesSection.astro";
import PortfolioSection from "@/components/sections/PortfolioSection.astro";
import MeetTheDuo from "@/components/sections/MeetTheDuo.astro";

export function getStaticPaths() {
  return generatePaths();
}

const homepage = await getEntryCTM("homepage", "-index", Astro.currentLocale);
---

<Base {...homepage.data}>
  <HomeBanner />
  <OurValue />
  <div class="about-flow relative overflow-hidden">
    <div class="about-flow-orb about-flow-orb-1" aria-hidden="true"></div>
    <div class="about-flow-orb about-flow-orb-2" aria-hidden="true"></div>
    <About />
    <MeetTheDuo />
  </div>
  <ServicesSection />
  <PricingSection />
  <PortfolioSection />
  <FaqSection content={homepage.data.faqSection} />
  <CallToAction />
</Base>

<style>
  .about-flow {
    background: var(--gradient-vibe-dark);
  }

  .about-flow-orb {
    position: absolute;
    border-radius: 9999px;
    filter: blur(64px);
    pointer-events: none;
    z-index: 0;
  }

  .about-flow-orb-1 {
    top: -5rem;
    right: -5rem;
    width: 22rem;
    height: 22rem;
    background: var(--color-vibe-orb-strong);
  }

  .about-flow-orb-2 {
    bottom: 4rem;
    left: -4rem;
    width: 18rem;
    height: 18rem;
    background: var(--color-vibe-orb-soft);
  }

  .about-flow > section {
    position: relative;
    z-index: 1;
  }
</style>
